<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dnr2i.master.unicaen.fr.androidproject.HomeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:orientation="vertical">

        <Button
            android:id="@+id/createAdBtn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="@string/createAdBtn" />

        <Button
            android:id="@+id/randomAdBtn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="@string/randomAdBtn" />

        <Button
            android:id="@+id/adsListBtn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_dark"
            android:elevation="0dp"
            android:padding="10dp"
            android:text="@string/adsListBtn" />

        <Button
            android:id="@+id/searchBtn"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="@string/searchBtn" />
    </LinearLayout>
</RelativeLayout>
